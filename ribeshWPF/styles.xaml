<Window x:Class="ribeshWPF.styles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ribeshWPF"
        mc:Ignorable="d"
        Title="styles" Height="300" Width="300">
    <Window.Resources>
        
    </Window.Resources>
    <Grid>
        <Grid.Resources>
            
        </Grid.Resources>
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="TextBox">
                    <Setter Property="FontFamily" Value="times new roman" />
                </Style>
            </StackPanel.Resources>
            <TextBox  Text="this is a text"></TextBox>
            <TextBox FontFamily="Times New Roman" Text="this is another text"></TextBox>

        </StackPanel>
    </Grid>
</Window>
