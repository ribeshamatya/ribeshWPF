<Window x:Class="ribeshWPF.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ribeshWPF"
        mc:Ignorable="d"
        Title="Window1" >
    <StackPanel>
        <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="{Binding ElementName=textBox,Path=Padding}"/>
        <TextBox x:Name="textBox" Height="200" TextWrapping="Wrap" Text="TextBox" FontSize="{Binding ElementName=slider,Path=Value}"/>
        <Slider x:Name="slider" Value="10" Margin="0 200 0 0"/>



    </StackPanel>
</Window>
