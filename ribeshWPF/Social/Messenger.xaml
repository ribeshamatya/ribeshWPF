<Window x:Class="ribeshWPF.Social.Messenger"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:ic="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ribeshWPF.Social"
        mc:Ignorable="d"
        Title="Messenger" Background="White" >
    <Grid>
        <StackPanel  VerticalAlignment="Center">
            <ic:PackIconSimpleIcons Kind="Messenger" Foreground="#0084ff" Width="200" Height="150" Margin="0 -20 0 0" HorizontalAlignment="Center" />
            <TextBlock Text="Facebook Messenger" Foreground="#0084ff" FontSize="24" Margin="0 20 0 0" HorizontalAlignment="Center"  />

            <TextBox  mah:TextBoxHelper.Watermark="Email or Phone" Foreground="#0084ff" FontSize="24" Margin="0 20 0 0" Width="400"   />
            <TextBox mah:TextBoxHelper.Watermark="Password" Foreground="#0084ff" FontSize="24" Margin="0 20 0 0" Width="400"  />
        </StackPanel>
    </Grid>
</Window>
