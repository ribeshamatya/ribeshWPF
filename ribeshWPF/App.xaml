<Application x:Class="ribeshWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ribeshWPF"
             StartupUri="NewWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBox">
            <!--<Setter Property="FontFamily" Value="Comic Sans MS"  />
            <Setter Property="Background" Value="OldLace"/>
            <Setter Property="Foreground" Value="Red"/>-->
        </Style>

        <Style TargetType="TextBox" x:Key="tstyle">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontWeight" Value="ExtraBold"></Setter>
        </Style>

        <Style TargetType="TextBox" x:Key="tstyle1">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontWeight" Value="ExtraBold"></Setter>
            <Setter Property="Foreground" Value="Blue" />
            <Setter Property="Background" Value="Lavender" />
        </Style>

        <Style TargetType="TextBox" x:Key="tstyle2">
            <Setter Property="FontFamily" Value="Comic Sans MS" />
            <Setter Property="FontWeight" Value="ExtraBold"></Setter>
            <Setter Property="Foreground" Value="Red" />
            <Setter Property="Background" Value="AliceBlue" />
        </Style>

       
    </Application.Resources>
</Application>
