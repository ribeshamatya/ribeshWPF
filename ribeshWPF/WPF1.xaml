<Window x:Class="ribeshWPF.WPF1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ribeshWPF"
        mc:Ignorable="d"
        Title="WPF1" Height="500" Width="500">
    <StackPanel>
    <StackPanel>
        <Button Content="press"></Button>
        <Button Content="ok"></Button>
        <TextBox Text="this is text"></TextBox>
        
    </StackPanel>
        <DockPanel>
            <Button Content="press"></Button>
            <Button Content="ok"></Button>
            <TextBox Style="{StaticResource tstyle}" Text="this is text"></TextBox>
        </DockPanel>

        <Grid>
            <Button Content="press"></Button>
            <Button Content="ok"></Button>
            <TextBox Text="this is text"></TextBox>
        </Grid>
    </StackPanel>
</Window>
