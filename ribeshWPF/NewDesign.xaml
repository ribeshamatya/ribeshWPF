<Window x:Class="ribeshWPF.NewDesign"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ribeshWPF"
        mc:Ignorable="d"
        Title="NewDesign" Height="300" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Sign Up" FontSize="24" Foreground="#2B99CA" Margin="50 0 0 10"/>

            <TextBlock Text="It's about to get fun" FontSize="24" Foreground="#D6D6D6" Margin="0 0 0 20" />

            <TextBox Text="Email" FontSize="24" Foreground="#C2C2C2" Margin="50 0 10 20" FontFamily="ariel" BorderThickness="0" TextDecorations="underline" />
            <TextBox Text="Password" FontSize="24" Foreground="#C2C2C2" Margin="50 0 10 20" FontFamily="ariel" TextDecorations="underline" BorderThickness="0" />
            <Border CornerRadius="5" BorderBrush="orange" BorderThickness="1" Background="#FABE1F" Padding="2"  Width="100">
                <Button Content="Next" Background="#FABE1F" Foreground="White" BorderBrush="Transparent"  Height="30"/>

            </Border>
        </StackPanel>
    </Grid>
</Window>
